<% if page.current? %>
<td class="cur">
  <span class="csb" style="background-position:-53px 0;width:20px"></span>
  <%= page %>
</td>
<% else %>
<td>
  <%= link_to url, :class => 'fl', :remote => remote do %>
    <span class="csb ch" style="background-position:-74px 0;width:20px"></span
    <%= page %>
  <% end %>
</td>
<% end %>
